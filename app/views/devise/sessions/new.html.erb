<link href="signin.scss" rel="stylesheets">
<style type="text/css">
  body {
    background: url(/assets/bg.png),linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5));
    background-size: cover;
    background-blend-mode: overlay;
  }
  h2{
    color: white;
    font-family: Impact, Charcoal, sans-serif;
  }
 main{
  margin-top: 5%;
 }
  .whitespace{
    height: 100%;
    overflow: hidden;
    color: #FFFFFF
  }

  hr{
    border-bottom: 1px solid white ;
  }
</style>
<div class="text-center whitespace" id="bg" style="width: 40%; margin: auto">
  
  <div>
    <% if notice %>
    <aside id="notice"><%= notice %></aside>
    <% end %>
    <p><%= alert %></p>
  </div>
  <h2>Log in</h2>
  <hr>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    

    
      <%= f.button :submit, "Log in" ,class: "btn btn-lg btn-primary btn-block"%>
    
  <% end %>
  <br>
  <%= render "devise/shared/links" %>
</div>
